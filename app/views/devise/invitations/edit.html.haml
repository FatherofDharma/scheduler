- content_for :page_header do
  %h2= t 'devise.invitations.edit.header'
= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f|
  = devise_error_messages!
  = f.hidden_field :invitation_token, readonly: true
  %p
    = f.label :first_name
    = f.text_field :first_name
  %p
    = f.label :last_name
    = f.text_field :last_name
  - if f.object.class.require_password_on_accepting
    %p
      = f.label :password
      = f.password_field :password
    %p
      = f.label :password_confirmation
      = f.password_field :password_confirmation
  - if profile_attributes_required?(resource)
    %p
      = f.label :birth_date
      = f.date_field :birth_date
    %p
      = f.label :phone
      = f.phone_field :phone
    %p
      = f.label :resident_since
      = f.date_field :resident_since
    %p
      = f.label :discovered_omd_by
      = f.text_area :discovered_omd_by
    %p
      = f.label :medical_limitations
      = f.check_box :medical_limitations
    %p
      = f.label :medical_limitations_desc
      = f.text_area :medical_limitations_desc
    %p
      = f.label :conviction
      = f.check_box :conviction
    %p
      = f.label :conviction_desc
      = f.text_area :conviction_desc
  %p= f.submit t("devise.invitations.edit.submit_button")
